version: "3.3"

volumes:
  postgres:

services:
  web:
    image: skyportal/web
    ports:
      - "9000:5000"
      - "9001:5001"
    restart: always
    links:
      - db

  db:
    image: postgres:9.6
    volumes:
      - postgres:/var/lib/postgresql/data
    restart: always
    environment:
      - POSTGRES_USER=skyportal
      - POSTGRES_PASSWORD=latropyks
      - POSTGRES_DB=skyportal
